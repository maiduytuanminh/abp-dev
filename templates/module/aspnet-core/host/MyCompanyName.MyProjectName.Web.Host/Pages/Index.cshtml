@page
@using MyCompanyName.MyProjectName.Pages
@model IndexModel
@using Microsoft.AspNetCore.Mvc.Localization
@using MyCompanyName.MyProjectName.Localization
@using SmartSoftware.Users
@inject IHtmlLocalizer<MyProjectNameResource> L
@inject ICurrentUser CurrentUser

<ss-card>
    <ss-card-header>Welcome</ss-card-header>
    <ss-card-body>
        @if (!CurrentUser.IsAuthenticated)
        {
            <form method="POST">
                <input type="submit" asp-page-handler="Login" value="LOGIN" class="btn btn-primary" />
            </form>
        }
        else
        {
            <strong>Claims</strong><br />
            @Html.Raw(CurrentUser.GetAllClaims().Select(c => $"{c.Type}={c.Value}").OrderBy(x => x).JoinAsString(" <br /> "))
        }
        <hr />
        <p class="text-end"><a href="https://smartsoftware.io?ref=tmpl" target="_blank">smartsoftware.io</a></p>
    </ss-card-body>
</ss-card>
