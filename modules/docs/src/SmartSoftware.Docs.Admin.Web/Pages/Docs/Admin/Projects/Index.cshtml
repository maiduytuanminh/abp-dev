@page
@using Microsoft.AspNetCore.Authorization
@using SmartSoftware.AspNetCore.Mvc.UI.Layout
@using SmartSoftware.Docs.Admin
@using SmartSoftware.Docs.Admin.Navigation
@using Microsoft.AspNetCore.Mvc.Localization
@using SmartSoftware.Docs.Localization
@model SmartSoftware.Docs.Admin.Pages.Docs.Admin.Projects.IndexModel
@inject IHtmlLocalizer<DocsResource> L
@inject IAuthorizationService Authorization
@{
    ViewBag.PageTitle = "Projects";
}
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["Projects"].Value;
    PageLayout.Content.BreadCrumb.Add(L["Menu:DocumentManagement"].Value);
    PageLayout.Content.MenuItemName = DocsMenuNames.Projects;
}

@section scripts {
    <ss-script src="/client-proxies/docs-admin-proxy.js" />
    <ss-script src="/Pages/Docs/Admin/Projects/index.js" />
    <ss-script src="/Pages/Docs/Admin/Projects/create.js" />
    <ss-script src="/Pages/Docs/Admin/Projects/edit.js" />
    <ss-script src="/Pages/Docs/Admin/Projects/pull.js" />
}

<ss-card>
    <ss-card-header>
        <ss-row>
            <ss-column size-md="_12" class="text-end">
                @if (await Authorization.IsGrantedAsync(DocsAdminPermissions.Projects.Create))
                {
                    <ss-dropdown>
                        <ss-dropdown-button button-type="Primary" icon="plus" text="@L["CreateANewProject"].Value" />
                        <ss-dropdown-menu align="End">
                            <ss-dropdown-item href="#" id="CreateNewGithubProjectButtonId"><i class="fa fa-github"></i> GitHub</ss-dropdown-item>
                        </ss-dropdown-menu>
                    </ss-dropdown>
                }
                @if (await Authorization.IsGrantedAsync(DocsAdminPermissions.Projects.Default))
                {
                    <ss-button button-type="Primary" icon="plus" text="@L["ReIndexAllProjects"].Value" id="ReIndexAllProjects" />
                }
            </ss-column>
        </ss-row>
    </ss-card-header>
    <ss-card-body>
        <ss-table  id="ProjectsTable" class="nowrap">
            <thead>
                <tr>
                    <th>@L["Actions"]</th>
                    <th>@L["Name"]</th>
                    <th>@L["ShortName"]</th>
                    <th>@L["DocumentStoreType"]</th>
                    <th>@L["Format"]</th>
                </tr>
            </thead>
        </ss-table>
    </ss-card-body>
</ss-card>
