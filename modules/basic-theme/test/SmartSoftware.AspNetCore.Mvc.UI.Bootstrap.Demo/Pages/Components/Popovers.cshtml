@page
@using SmartSoftware.AspNetCore.Mvc.UI.Bootstrap.Demo
@model SmartSoftware.AspNetCore.Mvc.UI.Bootstrap.Demo.Pages.Components.PopoversModel
@{
    ViewData["Title"] = "Popovers";
}


<h2>Popovers</h2>

<p>Based on <a href="@BootstrapUrlHelper.GetDocUrl("components/popovers")" target="_blank"> Bootstrap Popovers</a>.</p>


<h4>Example</h4>

<div class="demo-with-code">
    <div class="demo-area">

        <ss-button ss-popover="Hi, i'm popover content!">
            Popover Default
        </ss-button>
        <ss-button ss-popover-top="Hi, i'm hoverable popover content!" title="Popover Title" hoverable="true">
            Popover With Title
        </ss-button>
        <ss-button ss-popover-right="Hi, i'm dismissible popover content!" title="Popover Title" dismissible="true">
            Dismissible Popover
        </ss-button>
        <ss-button ss-popover-left="Hi, i'm disabled popover content!" title="Popover Title" disabled="true">
            Disabled Popover
        </ss-button>
        <ss-button ss-popover="Hi, i'm disabled dismissible hoverable popover content!" title="Popover Title" disabled="true" dismissible="true" hoverable="true">
            Disabled Popover
        </ss-button>
    </div>
    <div class="code-area">
        <ss-tabs>
