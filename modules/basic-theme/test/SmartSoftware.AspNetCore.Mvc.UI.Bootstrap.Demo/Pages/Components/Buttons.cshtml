    <div class="code-area">
        <ss-tabs>
            <ss-tab title="Tag Helper">
                <pre><code>
&lt;ss-button&gt; Default &lt;/ss-button&gt;
&lt;ss-button button-type=&quot;Primary&quot;&gt;Primary&lt;/ss-button&gt;
&lt;ss-button button-type=&quot;Secondary&quot;&gt;Secondary&lt;/ss-button&gt;
&lt;ss-button button-type=&quot;Success&quot;&gt;Success&lt;/ss-button&gt;
