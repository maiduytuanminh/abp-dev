&lt;ss-button button-type=&quot;Warning&quot;&gt;Warning&lt;/ss-button&gt;
&lt;ss-button button-type=&quot;Info&quot;&gt;Info&lt;/ss-button&gt;
&lt;ss-button button-type=&quot;Light&quot;&gt;Light&lt;/ss-button&gt;
&lt;ss-button button-type=&quot;Dark&quot;&gt;Dark&lt;/ss-button&gt;

&lt;ss-button button-type=&quot;Link&quot;&gt;Link&lt;/ss-button&gt;
</code></pre>
            </ss-tab>
            <ss-tab title="Rendered">
<pre><code>
&lt;button type=&quot;button&quot; class=&quot;btn&quot;&gt;Default&lt;/button&gt;
&lt;button type=&quot;button&quot; class=&quot;btn btn-primary&quot;&gt;Primary&lt;/button&gt;
