@page
@using SmartSoftware.AspNetCore.Mvc.UI.Bootstrap.Demo
@model SmartSoftware.AspNetCore.Mvc.UI.Bootstrap.Demo.Pages.Components.TooltipsModel
@{
    ViewData["Title"] = "Tooltips";
}


<h2>Tooltips</h2>

<p>Based on <a href="@BootstrapUrlHelper.GetDocUrl("components/tooltips")" target="_blank"> Bootstrap Tooltips</a>.</p>

<h4>Example</h4>

<div class="demo-with-code">
    <div class="demo-area">

        <ss-button ss-tooltip="Tooltip">
            Tooltip Default
        </ss-button>
        <ss-button ss-tooltip-top="Tooltip">
            Tooltip on top
        </ss-button>
        <ss-button ss-tooltip-right="Tooltip">
            Tooltip on right
        </ss-button>
        <ss-button ss-tooltip-bottom="Tooltip">
            Tooltip on bottom
        </ss-button>
        <ss-button disabled="true" ss-tooltip="Tooltip">
            Disabled button Tooltip
        </ss-button>
    </div>
    <div class="code-area">
        <ss-tabs>
            <ss-tab title="Tag Helper" active="true">
                <pre><code>
&lt;ss-button ss-tooltip=&quot;Tooltip&quot;&gt;
