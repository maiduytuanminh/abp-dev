@page
@model SmartSoftware.Account.Web.Pages.Account.ResetPasswordConfirmationModel
@inject SmartSoftware.AspNetCore.Mvc.UI.Layout.IPageLayout PageLayout
@using Microsoft.AspNetCore.Mvc.Localization
@using SmartSoftware.Account.Localization
@inject IHtmlLocalizer<AccountResource> L
<div class="card mt-3 shadow-sm rounded">
    <div class="card-body p-5">
        <h4>@L["ResetPassword"]</h4>
        <p>@L["YourPasswordIsSuccessfullyReset"]</p>
        <a ss-button="Primary" href="@Url.Content(Model.ReturnUrl)">@L["GoToTheApplication"]</a>
    </div>
</div>
