@using System;
@using SmartSoftware.Identity
@using Microsoft.Extensions.Localization
@using SmartSoftware.Identity.Localization

@inject IStringLocalizer<IdentityResource> L

@(Data.As<IdentityRoleDto>().Name)
@if (Data.As<IdentityRoleDto>().IsDefault)
{
    <Badge Color="Color.Success" Margin="Margin.Is1.FromStart">@L["DisplayName:IsDefault"]</Badge>
}
@if (Data.As<IdentityRoleDto>().IsPublic)
{
    <Badge Color="Color.Info" Margin="Margin.Is1.FromStart">@L["DisplayName:IsPublic"]</Badge>
}