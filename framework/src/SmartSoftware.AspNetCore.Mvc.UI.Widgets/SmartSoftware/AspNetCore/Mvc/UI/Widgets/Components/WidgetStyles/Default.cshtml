@model SmartSoftware.AspNetCore.Mvc.UI.Widgets.Components.WidgetResourcesViewModel
@if (Model.Widgets.Any())
{
    var resourceItems = Model.Widgets.SelectMany(w => w.Styles).ToArray();
    if (resourceItems.Any())
    {
        <ss-style-bundle>
            @foreach (var resourceItem in resourceItems)
            {
                if (resourceItem.Src != null)
                {
                    <ss-style src="@resourceItem.Src" />
                }
                else
                {
                    <ss-style type="@resourceItem.Type" />
                }
            }
        </ss-style-bundle>
    }
}