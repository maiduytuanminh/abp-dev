<ss-component-demo-section title="Outline" view-path="@ButtonsDemoViewComponent.ViewPath">
    <ss-button button-type="Outline_Primary">Primary</ss-button>
    <ss-button button-type="Outline_Secondary">Secondary</ss-button>
    <ss-button button-type="Outline_Success">Success</ss-button>
