    <ss-button size="Large" button-type="Primary" text="Large button" />
    <ss-button size="Large" button-type="Secondary" text="Large button" />
</ss-component-demo-section>

<ss-component-demo-section title="Sizes" view-path="@ButtonsDemoViewComponent.ViewPath">
    <ss-button size="Small" button-type="Primary" text="Small button" />
    <ss-button size="Small" button-type="Secondary" text="Small button" />
</ss-component-demo-section>

<ss-component-demo-section title="Active State" view-path="@ButtonsDemoViewComponent.ViewPath">
    <ss-button size="Large" button-type="Primary" class="active" text="Primary button" />
    <ss-button size="Large" button-type="Secondary" class="active" text="Button" />
</ss-component-demo-section>

