<ss-component-demo-section title="Mix and match" view-path="@GridsDemoViewComponent.ViewPath">
    <!-- Stack the columns on mobile by making one full-width and the other half-width -->
    <ss-row>
        <ss-column size="_12" size-md="_8">.col-12 .col-md-8</ss-column>
        <ss-column size="_6" size-md="_4">.col-6 .col-md-4</ss-column>
    </ss-row>

    <!-- Columns start at 50% wide on mobile and bump up to 33.3% wide on desktop -->
    <ss-row>
        <ss-column size="_6" size-md="_4">.col-6 .col-md-4</ss-column>
        <ss-column size="_6" size-md="_4">.col-6 .col-md-4</ss-column>
        <ss-column size="_6" size-md="_4">.col-6 .col-md-4</ss-column>
    </ss-row>

    <!-- Columns are always 50% wide, on mobile and desktop -->
    <ss-row>
        <ss-column size="_6">.col-6</ss-column>
        <ss-column size="_6">.col-6</ss-column>
    </ss-row>
</ss-component-demo-section>

