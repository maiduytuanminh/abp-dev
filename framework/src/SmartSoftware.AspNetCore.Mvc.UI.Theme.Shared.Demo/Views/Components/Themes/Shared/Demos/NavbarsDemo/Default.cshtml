@using SmartSoftware.AspNetCore.Mvc.UI.Theme.Shared.Demo.Views.Components.Themes.Shared.Demos.NavbarsDemo

<ss-component-demo-section title="Example" view-path="@NavbarsDemoViewComponent.ViewPath">
    <ss-nav-bar size="Lg" navbar-style="Dark_Dark">
        <a ss-navbar-brand href="#">Navbar</a>
        <ss-navbar-toggle>
            <ss-navbar-nav>
                <ss-nav-item active="true">
                    <a ss-nav-link href="#">Home <span class="visually-hidden">(current)</span></a>
                </ss-nav-item>
                <ss-nav-item>
                    <a ss-nav-link href="#">Link</a>
                </ss-nav-item>
                <ss-nav-item dropdown="true">
