                            <ss-dropdown-header>Dropdown header</ss-dropdown-header>
                            <ss-dropdown-item href="#" active="true">Action</ss-dropdown-item>
                            <ss-dropdown-item href="#" disabled="true">Another disabled action</ss-dropdown-item>
                            <ss-dropdown-item href="#">Something else here</ss-dropdown-item>
                            <ss-dropdown-divider />
                            <ss-dropdown-item href="#">Separated link</ss-dropdown-item>
                        </ss-dropdown-menu>
                    </ss-dropdown>
                </ss-nav-item>
                <ss-nav-item>
                    <a ss-nav-link disabled="true" href="#">Disabled</a>
                </ss-nav-item>
            </ss-navbar-nav>
            <span ss-navbar-text>
                Sample Text
            </span>
        </ss-navbar-toggle>
    </ss-nav-bar>
</ss-component-demo-section>

