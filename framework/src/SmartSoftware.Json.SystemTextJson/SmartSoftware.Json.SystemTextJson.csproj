<Project Sdk="Microsoft.NET.Sdk">

    <Import Project="..\..\..\configureawait.props" />
    <Import Project="..\..\..\common.props" />

    <PropertyGroup>
        <TargetFrameworks>netstandard2.0;netstandard2.1;net8.0</TargetFrameworks>
        <Nullable>enable</Nullable>
        <WarningsAsErrors>Nullable</WarningsAsErrors>
        <AssemblyName>SmartSoftware.Json.SystemTextJson</AssemblyName>
        <PackageId>SmartSoftware.Json.SystemTextJson</PackageId>
        <AssetTargetFallback>$(AssetTargetFallback);portable-net45+win8+wp8+wpa81;</AssetTargetFallback>
        <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
        <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
        <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
        <RootNamespace />
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\SmartSoftware.Json.Abstractions\SmartSoftware.Json.Abstractions.csproj" />
        <ProjectReference Include="..\SmartSoftware.Timing\SmartSoftware.Timing.csproj" />
        <ProjectReference Include="..\SmartSoftware.Data\SmartSoftware.Data.csproj" />
        <PackageReference Include="System.Text.Json" />
    </ItemGroup>

</Project>
